<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Hyperlink?>
<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.fuelstationfx.InvoiceController">
    <Label text="Generate Invoice" style="-fx-font-size: 18pt; -fx-font-weight: bold;" />
    <VBox spacing="5">
        <Label text="Customer ID" style="-fx-font-size: 14pt;" />
        <TextField fx:id="customerIdField" style="-fx-font-size: 14pt;" />
    </VBox>
    <Button fx:id="generateInvoiceButton" text="Generate" style="-fx-font-size: 14pt; -fx-padding: 5 20;" />
    <Label fx:id="statusLabel" style="-fx-font-size: 14pt; -fx-text-fill: red;" />
    <Hyperlink fx:id="downloadLink" text="" />
</VBox>
